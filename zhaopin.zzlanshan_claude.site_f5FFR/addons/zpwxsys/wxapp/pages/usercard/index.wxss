page {
  background-color: #f5f5f5;
}
.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 报名者头部 */
.card-header {
  display: flex;
  flex-direction: row;
  background: linear-gradient(135deg, #2577f5, #1aadfd);
  padding: 40rpx 30rpx;
  color: #fff;
}
.card-avatar {
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}
.card-avatar image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255,255,255,0.5);
}
.card-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.card-name {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}
.card-tags {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}
.card-phone {
  font-size: 26rpx;
  opacity: 0.8;
}

/* 发布者头部 */
.pub-card-header {
  display: flex;
  flex-direction: row;
  background: linear-gradient(135deg, #2577f5, #1aadfd);
  padding: 40rpx 30rpx;
  color: #fff;
}
.pub-logo {
  width: 130rpx;
  height: 130rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}
.pub-logo image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 16rpx;
  border: 4rpx solid rgba(255,255,255,0.3);
}
.pub-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.pub-company {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}
.pub-short {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 6rpx;
}
.pub-meta {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 统计数据 */
.card-stats {
  display: flex;
  flex-direction: row;
  background: #fff;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
}
.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-right: 1rpx solid #eee;
}
.stat-item:last-child {
  border-right: none;
}
.stat-num {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}
.rating-num {
  color: #ff8300;
}
.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 信息区块 */
.card-section {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #2577f5;
}
.info-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.info-row:last-child {
  border-bottom: none;
}
.info-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #999;
  flex-shrink: 0;
}
.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}
.info-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  border-bottom: 2rpx solid #2577f5;
  padding: 8rpx 0;
}

/* 评分 */
.rating-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx 0;
}
.rating-flowers {
  display: flex;
  flex-direction: row;
  margin-right: 16rpx;
}
.flower-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}
.rating-text {
  font-size: 28rpx;
  color: #ff8300;
  font-weight: bold;
}

/* 营业执照 */
.license-img {
  width: 100%;
  border-radius: 12rpx;
}
.no-license {
  text-align: center;
  padding: 40rpx 0;
  color: #ccc;
  font-size: 28rpx;
}
.upload-area {
  border: 2rpx dashed #ccc;
  border-radius: 12rpx;
  min-height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.upload-placeholder {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
}

/* 操作按钮 */
.card-actions {
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.card-actions button {
  margin: 0 16rpx;
  font-size: 30rpx;
  border-radius: 50rpx;
  padding: 0 60rpx;
}
.btn-edit {
  background: #2577f5 !important;
  color: #fff !important;
}
.btn-save {
  background: #1aadfd !important;
  color: #fff !important;
}
.btn-cancel {
  background: #eee !important;
  color: #666 !important;
}
.btn-call {
  background: #ff8300 !important;
  color: #fff !important;
  width: 80%;
}
