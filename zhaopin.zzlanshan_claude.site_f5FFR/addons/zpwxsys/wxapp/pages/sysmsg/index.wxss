page {
  background: #f5f5f5;
}

.container {
  background-color: #f5f5f5;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  padding-bottom: 120rpx;
}

/* 通知引导横幅 */
.notify-banner {
  background: #fff;
  margin: 20rpx 24rpx;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.notify-close {
  position: absolute;
  right: 20rpx;
  top: 12rpx;
  font-size: 36rpx;
  color: #999;
  padding: 10rpx;
  line-height: 1;
}

.notify-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.notify-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
  text-align: center;
}

.notify-btn {
  background: linear-gradient(135deg, #ff6b35, #ff8c42);
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 80rpx;
  border-radius: 40rpx;
  font-weight: 500;
}

/* 筛选切换栏 */
.msg-tabs {
  display: flex;
  flex-direction: row;
  background: #fff;
  padding: 0 24rpx;
  margin-bottom: 4rpx;
}

.msg-tab {
  font-size: 28rpx;
  color: #999;
  padding: 24rpx 30rpx;
  position: relative;
  margin-right: 20rpx;
}

.msg-tab.active {
  color: #333;
  font-weight: 600;
}

.msg-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: #ff6b35;
  border-radius: 3rpx;
}

/* 消息卡片列表 */
.msg-list {
  display: flex;
  flex-direction: column;
}

.msg-card {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  background: #fff;
  padding: 28rpx 24rpx;
  margin-bottom: 2rpx;
  position: relative;
}

.msg-avatar {
  flex-shrink: 0;
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.msg-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.msg-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  min-width: 0;
}

.msg-top {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}

.msg-jobtitle {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 360rpx;
}

.msg-money {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: 600;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.msg-bottom {
  margin-bottom: 8rpx;
}

.msg-content {
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
  max-width: 100%;
}

.msg-time {
  font-size: 22rpx;
  color: #bbb;
}

.msg-unread-dot {
  position: absolute;
  right: 24rpx;
  top: 36rpx;
  width: 16rpx;
  height: 16rpx;
  background: #ff4d4f;
  border-radius: 50%;
}

/* 空状态 */
.msg-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.msg-empty image {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 20rpx;
}

.msg-empty text {
  font-size: 26rpx;
  color: #999;
}

/* 群聊消息入口 */
.chat-entry {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 28rpx 24rpx;
  margin-bottom: 2rpx;
}

.chat-entry-left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.chat-entry-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #4facfe, #00f2fe);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  color: #fff;
  font-size: 36rpx;
}

.chat-entry-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.chat-entry-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 审核模式提示 */
.msg-check-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.msg-check-tip image {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 20rpx;
}

.msg-check-tip text {
  font-size: 28rpx;
  color: #999;
}
