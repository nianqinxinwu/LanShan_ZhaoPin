<view class="container">

<!-- 通知引导横幅 -->
<view class="notify-banner" hidden="{{notifyHidden}}">
  <view class="notify-close" bindtap="closeNotify">×</view>
  <view class="notify-title">开启消息通知</view>
  <view class="notify-desc">第一时间获取报名结果，工作通知，最新发布消息</view>
  <view class="notify-btn" bindtap="enableNotify">立即开启</view>
</view>

<!-- 筛选切换栏 -->
<view class="msg-tabs" hidden="{{checkFlag == 1}}">
  <view class="msg-tab {{activeTab == 'all' ? 'active' : ''}}" bindtap="switchTab" data-tab="all">全部</view>
  <view class="msg-tab {{activeTab == 'unread' ? 'active' : ''}}" bindtap="switchTab" data-tab="unread">未读{{unreadCount > 0 ? '(' + unreadCount + ')' : ''}}</view>
</view>

<!-- 群聊消息入口 -->
<navigator url="/pages/mychatlist/index" hover-class="none">
  <view class="chat-entry" hidden="{{checkFlag == 1}}">
    <view class="chat-entry-left">
      <view class="chat-entry-icon">
        <view class="cuIcon-peoplelist"></view>
      </view>
      <text class="chat-entry-text">群聊消息</text>
    </view>
    <text class="chat-entry-arrow">></text>
  </view>
</navigator>

<!-- 消息卡片列表 -->
<view class="msg-list" hidden="{{checkFlag == 1}}">
  <view class="msg-card" wx:for="{{sysmsglist}}" wx:key="id" bindtap="tapMsg" data-item="{{item}}">
    <view class="msg-avatar">
      <image class="msg-icon" src="{{item.iconPath || '../../imgs/icon/nodata.png'}}"></image>
    </view>
    <view class="msg-body">
      <view class="msg-top">
        <text class="msg-jobtitle">{{item.jobtitle || '系统消息'}}</text>
        <text class="msg-money" wx:if="{{item.money}}">{{item.money}}</text>
      </view>
      <view class="msg-bottom">
        <text class="msg-content">{{item.companyname ? item.companyname + '：' : ''}}{{item.content}}</text>
      </view>
      <view class="msg-time">{{item.createtime}}</view>
    </view>
    <view class="msg-unread-dot" wx:if="{{item.status == 0}}"></view>
  </view>

  <!-- 空状态 -->
  <view class="msg-empty" wx:if="{{sysmsglist.length == 0}}">
    <image src="../../imgs/icon/nodata.png"></image>
    <text>暂无消息</text>
  </view>
</view>

<!-- 审核模式提示 -->
<view class="msg-check-tip" wx:if="{{checkFlag == 1}}">
  <image src="../../imgs/icon/nodata.png"></image>
  <text>消息中心</text>
</view>

</view>


<view class="cu-bar tabbar foot bg-white">
    <view class="action text-gray" bindtap="toIndex">
      <view class="cuIcon-homefill"></view> 首页
    </view>
    <view class="action text-gray" bindtap="toFindjob">
      <view class="cuIcon-similar"></view> {{checkFlag == 1 ? '找工作' : '找活'}}
    </view>
    <view class="action text-gray add-action"  bindtap="toMyinvate">
      <button class="cu-btn cuIcon-add bg-red shadow"></button>
      发布
    </view>


    <view class="action text-blue" bindtap="toSysmsg">
      <view class="cuIcon-notice">
      </view>
      {{checkFlag == 1 ? '消息中心' : '消息'}}
    </view>
    <view class="action text-gray" bindtap="toMyuser">
      <view class="cuIcon-my">
      </view>
      我的
    </view>
  </view>
