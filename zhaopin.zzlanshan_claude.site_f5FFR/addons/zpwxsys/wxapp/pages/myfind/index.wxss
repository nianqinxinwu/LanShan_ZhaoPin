page {
  background: #f5f5f5;
}

.container {
  background-color: #f5f5f5;
  min-height: 100%;
}

.filter-tabs {
  width: 750rpx;
  display: flex;
  flex-direction: row;
  background: #FFF;
  border-bottom: 1rpx solid #efefef;
}

.filter-tabs .tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 14px;
  color: #666;
  position: relative;
}

.filter-tabs .tab.active {
  color: #2577f5;
  font-weight: bold;
}

.filter-tabs .tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #2577f5;
  border-radius: 2rpx;
}

/* 卡片列表 */
.card-list {
  padding: 16rpx 20rpx;
}

.job-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx 24rpx 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

/* 卡片头部 */
.card-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 16rpx;
}

.card-status {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
  background: #f0f0f0;
  color: #999;
}

.card-status.status-selected {
  background: #e8f5e9;
  color: #4caf50;
}

.card-status.status-active {
  background: #e8f0fe;
  color: #2577f5;
}

.card-status.status-expired {
  background: #f5f5f5;
  color: #999;
}

/* 卡片行 */
.card-row {
  margin-bottom: 10rpx;
}

.card-row-between {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.card-info-text {
  font-size: 26rpx;
  color: #888;
}

.card-price {
  font-size: 28rpx;
  color: #e64340;
  font-weight: bold;
}

.card-num {
  font-size: 24rpx;
  color: #999;
}

.card-address {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}

/* 按钮栏 */
.card-actions {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #fff;
}

.btn-confirm {
  background: #ff9800;
}

.btn-signin {
  background: #4caf50;
}

.btn-signout {
  background: #e64340;
}

.btn-eval {
  background: #2577f5;
}

/* 已完成态 */
.btn-done {
  background: #e0e0e0 !important;
  color: #999 !important;
}

/* 禁用态 */
.btn-disabled {
  background: #f0f0f0 !important;
  color: #ccc !important;
}

/* 无数据 */
.nodata {
  width: 750rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 300rpx;
}

.nodata image {
  width: 150rpx;
  height: 150rpx;
}
