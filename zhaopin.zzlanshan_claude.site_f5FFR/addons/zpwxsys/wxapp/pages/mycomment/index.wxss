page{
    background: #f5f5f5;
  }

  .filter-tabs {
    width: 750rpx;
    display: flex;
    flex-direction: row;
    background: #FFF;
    border-bottom: 1rpx solid #efefef;
  }

  .filter-tabs .tab {
    flex: 1;
    text-align: center;
    padding: 24rpx 0;
    font-size: 14px;
    color: #666;
    position: relative;
  }

  .filter-tabs .tab.active {
    color: #2577f5;
    font-weight: bold;
  }

  .filter-tabs .tab.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60rpx;
    height: 4rpx;
    background: #2577f5;
    border-radius: 2rpx;
  }

  .flower-rating {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left: 5%;
  }

  .flower-icon {
    width: 36rpx;
    height: 36rpx;
    margin-right: 4rpx;
  }

  .container {
    background-color: #f5f5f5;
    min-height: 100%;
  }
.commentlist{
    display: flex;
    flex-direction: row;
    width:720rpx;
    margin: 0 auto;
    border-bottom: 1px solid #efefef;
    padding-top:30rpx;
    padding-bottom:30rpx;
    }
     .commentlist .commentpic{
    width:20%;
    
    justify-content: center;
    display: flex;
    }
     .commentlist .commentpic image{
     width:100rpx;
     height: 100rpx;
     border-radius: 50rpx;
    }
    
     .commentlist .commenttitle{
    width:75%;
    flex-direction: column;
    display: flex;
    justify-content: space-between;
    padding-top: 5rpx;
    }
    
    
     .commentlist .commenttitle .addresstop{
      padding-left: 5%;
      width:100%;
      font-size: .8rem;
      color: #000; 
    
    
    }
     .commentlist .commenttitle .content{
       margin-top: 20rpx;
      padding-left: 5%;
      text-align: left;
      font-size: .9rem;
      color: #767988; 
    }
    
    
    .piclist{
       margin-top: 20rpx;
      padding-left: 5%;
      text-align: left;
      font-size: .9rem;
      color: #000; 
      
      width:100%;
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
    
    }
    .piclist >image{
    
      width:150rpx;
      height: 150rpx;
      margin-right: 10rpx;
    
    }
    
    
     .commentlist .commenttitle .gomore{
       margin-top: 20rpx;
      padding-left: 5%;
      text-align: left;
      font-size: .8rem;
      color: #767988; 
    }
     .commentlist .commenttitle .time{
       margin-top: 20rpx;
      padding-left: 5%;
      text-align: left;
      font-size: .7rem;
      color: #9b9b9b; 
      display: flex;
      justify-content: space-between;
    
    }
    .time view:nth-child(2){

        background-color: red;
        width:120rpx;
        color:#fff;
        font-size: 12px;
        padding:8rpx;
        text-align: center;
        border-radius: 30rpx;


    }
    

    
