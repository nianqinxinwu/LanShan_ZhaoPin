page {
  background: #f5f7fa;
}

.container {
  padding: 0 30rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

/* Welcome section */
.welcome-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0 40rpx;
}

.welcome-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #1989fa, #47a3ff);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.welcome-icon-inner {
  width: 40rpx;
  height: 48rpx;
  border: 4rpx solid #fff;
  border-radius: 4rpx;
  position: relative;
}

.welcome-icon-inner::before {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 6rpx;
  width: 20rpx;
  height: 4rpx;
  background: #fff;
  box-shadow: 0 10rpx 0 #fff, 0 20rpx 0 #fff;
}

.welcome-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.welcome-desc {
  font-size: 26rpx;
  color: #999;
}

/* Rule card */
.rule-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 36rpx 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.rule-card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.rule-card-body {
  font-size: 28rpx;
  color: #555;
  line-height: 1.8;
  white-space: pre-wrap;
}

/* Agree section */
.agree-section {
  padding: 40rpx 0 20rpx;
}

.agree-hint {
  text-align: center;
  font-size: 24rpx;
  color: #bbb;
  margin-bottom: 20rpx;
}

.agree-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #ccc;
  color: #fff;
  border-radius: 44rpx;
  font-size: 30rpx;
  border: none;
  padding: 0;
  margin: 0;
}

.agree-btn::after {
  display: none;
}

.agree-btn.active {
  background: linear-gradient(135deg, #1989fa, #47a3ff);
}
