.container { display: flex; flex-direction: column; height: 100vh; background: #f5f5f5; overflow: hidden; }
.notice-bar { display: flex; align-items: center; padding: 16rpx 24rpx; background: #fff8e1; }
.notice-label { font-size: 22rpx; color: #fff; background: #ff9800; border-radius: 4rpx; padding: 4rpx 12rpx; margin-right: 12rpx; }
.notice-text { font-size: 24rpx; color: #666; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; flex: 1; }
.msg-list { flex: 1; height: 0; padding: 20rpx; }
.msg-loading { display: flex; align-items: center; justify-content: center; padding: 30rpx 0; gap: 12rpx; }
.msg-loading text { font-size: 24rpx; color: #bbb; }
.loading-dot { width: 12rpx; height: 12rpx; border-radius: 50%; background: #ccc; animation: blink 1.2s infinite; }
@keyframes blink { 0%, 100% { opacity: 0.3; } 50% { opacity: 1; } }
.msg-empty { text-align: center; padding: 60rpx 0; }
.msg-empty text { font-size: 24rpx; color: #ccc; }
.msg-item { display: flex; margin-bottom: 24rpx; align-items: flex-start; }
.msg-item.self { flex-direction: row-reverse; }
.msg-item.system { justify-content: center; }
.system-msg { background: rgba(0,0,0,0.06); border-radius: 8rpx; padding: 8rpx 20rpx; }
.system-msg text { font-size: 22rpx; color: #999; }
.msg-avatar { width: 72rpx; height: 72rpx; border-radius: 50%; flex-shrink: 0; }
.msg-body { margin: 0 16rpx; max-width: 65%; }
.msg-name-bar { display: flex; align-items: center; margin-bottom: 4rpx; }
.self .msg-name-bar { flex-direction: row-reverse; }
.msg-name { font-size: 22rpx; color: #999; }
.role-tag { font-size: 18rpx; padding: 2rpx 8rpx; border-radius: 4rpx; margin-left: 8rpx; }
.self .role-tag { margin-left: 0; margin-right: 8rpx; }
.role-tag.owner { background: #ff9800; color: #fff; }
.role-tag.admin { background: #1989fa; color: #fff; }
.msg-bubble { background: #fff; border-radius: 16rpx; padding: 16rpx 24rpx; word-break: break-all; }
.self .msg-bubble { background: #95ec69; }
.msg-bubble text { font-size: 28rpx; color: #333; line-height: 1.5; }
.msg-time { font-size: 20rpx; color: #bbb; margin-top: 4rpx; }
.self .msg-time { text-align: right; }
.rule-tip, .mute-tip { display: flex; align-items: center; justify-content: center; padding: 20rpx; background: #fff; border-top: 1rpx solid #eee; flex-shrink: 0; }
.rule-tip text, .mute-tip text { font-size: 26rpx; color: #999; }
.rule-btn { margin-left: 16rpx; font-size: 26rpx; color: #1989fa; }
.input-bar { display: flex; align-items: center; padding: 16rpx 20rpx; background: #fff; border-top: 1rpx solid #eee; padding-bottom: env(safe-area-inset-bottom); flex-shrink: 0; }
.msg-input { flex: 1; height: 72rpx; background: #f5f5f5; border-radius: 36rpx; padding: 0 24rpx; font-size: 28rpx; }
.send-btn { margin-left: 16rpx; background: #07c160; color: #fff; font-size: 28rpx; padding: 12rpx 32rpx; border-radius: 36rpx; }
.top-bar { display: flex; justify-content: flex-end; padding: 12rpx 24rpx; background: #fff; border-bottom: 1rpx solid #eee; gap: 16rpx; }
.top-bar-btn { font-size: 24rpx; color: #fff; background: linear-gradient(135deg, #ff6b35, #ff8c42); border-radius: 24rpx; padding: 8rpx 24rpx; }
.top-bar-btn.manage { background: linear-gradient(135deg, #1989fa, #47a3ff); }
.img-btn { width: 72rpx; height: 72rpx; line-height: 72rpx; text-align: center; font-size: 44rpx; color: #666; background: #f5f5f5; border-radius: 50%; margin-right: 12rpx; flex-shrink: 0; }
.msg-img { max-width: 100%; border-radius: 8rpx; }
.msg-bubble.img-bubble { padding: 8rpx; overflow: hidden; }
.msg-bubble.img-bubble .msg-img { width: 360rpx; max-height: 480rpx; display: block; }
