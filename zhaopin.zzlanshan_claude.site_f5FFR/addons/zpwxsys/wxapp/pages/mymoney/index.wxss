/* 章鱼币系统样式 */
.coin-tabs {
  display: flex;
  flex-direction: row;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}
.coin-tabs .tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
}
.coin-tabs .tab-item.active {
  color: #2577f5;
  font-weight: bold;
}
.coin-tabs .tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30%;
  width: 40%;
  height: 4rpx;
  background: #2577f5;
  border-radius: 2rpx;
}

.coin-balance-card {
  background: linear-gradient(135deg, #2577f5, #1aadfd);
  margin: 20rpx 25rpx;
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  color: #fff;
  text-align: center;
}
.balance-label {
  font-size: 28rpx;
  opacity: 0.9;
}
.balance-value {
  font-size: 60rpx;
  font-weight: bold;
  margin: 16rpx 0;
}
.balance-desc {
  font-size: 24rpx;
  opacity: 0.7;
}

.point-balance-card {
  background: linear-gradient(135deg, #ff8300, #ffaa00);
  margin: 20rpx 25rpx;
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  color: #fff;
  text-align: center;
}

.coin-section {
  background: #fff;
  margin: 20rpx 25rpx;
  padding: 30rpx;
  border-radius: 16rpx;
}
.coin-section .section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.recharge-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.recharge-item {
  width: 30%;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  padding: 20rpx 0;
  text-align: center;
  margin-bottom: 16rpx;
}
.recharge-item.selected {
  border-color: #2577f5;
  background: #f0f6ff;
}
.item-amount {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.item-price {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.btn-recharge {
  background: #2577f5 !important;
  color: #fff !important;
  border-radius: 50rpx !important;
  margin-top: 20rpx;
  font-size: 30rpx !important;
}

.btn-exchange {
  background: #ff8300 !important;
  color: #fff !important;
  border-radius: 50rpx !important;
  margin-top: 20rpx;
  font-size: 30rpx !important;
}
.btn-exchange[disabled] {
  background: #ccc !important;
  color: #999 !important;
}

/* 积分获取卡片 — 与充值档位同结构，橙色高亮 */
.point-earn-card {
  border-color: #ff8300;
  background: #fff8f0;
}
.point-earn-card .item-amount {
  color: #ff8300;
}
.point-earn-card .item-price {
