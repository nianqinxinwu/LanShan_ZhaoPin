<!--pages/mymoney/index.wxml-->
<view class="container">

<!-- 旧系统佣金模式 -->
<view hidden="{{checkFlag != 1}}">

  <view class="header">
    <view hidden="{{!isuser}}">
      <view class="pic"></view>
    </view>
  </view>

  <view class="mymoney">
    <view>账户余额(元)</view>
    <view>￥{{totalmoney}}</view>
    <view bindtap="toGetmoney">我要提现</view>
  </view>

  <view class="list">
    <view class="item" bindtap="toMymoneyrecord"><image src="../../imgs/icon/05.png"></image><view style="margin-left:16rpx;">佣金明细</view></view>
  </view>

</view>


<!-- 章鱼外快模式 -->
<view hidden="{{checkFlag == 1}}">

  <!-- 章鱼币面板 -->
  <view>
    <view class="coin-balance-card">
      <view class="balance-label">章鱼币余额</view>
      <view class="balance-value">{{coinBalance}}</view>
      <view class="balance-desc">1章鱼币 = 1元</view>
    </view>

    <!-- 充值档位 -->
    <view class="coin-section">
      <view class="section-title">选择充值档位</view>
      <view class="recharge-grid">
        <view class="recharge-item {{selectedAmount == item.amount ? 'selected' : ''}}"
          wx:for="{{rechargeOptions}}" wx:key="amount"
          bindtap="selectAmount" data-amount="{{item.amount}}">
          <view class="item-amount">{{item.label}}</view>
          <view class="item-price">¥{{item.price}}</view>
        </view>
      </view>
      <button class="btn-recharge" bindtap="doRecharge">立即充值</button>
    </view>

    <!-- 操作入口 -->
    <view class="coin-menu">
      <view class="menu-item" bindtap="toCoinRecords">
        <image src="../../imgs/icon/05.png"></image>
        <view>消费明细</view>
      </view>
    </view>
  </view>

</view>

</view>
