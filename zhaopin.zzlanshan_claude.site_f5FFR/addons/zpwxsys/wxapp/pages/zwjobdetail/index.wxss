page {
  background-color: #f5f6f8;
}
.container {
  background-color: #f5f6f8;
  min-height: 100%;
  padding-bottom: 20rpx;
}

/* Header */
.zw-header {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 16rpx;
}
.zw-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 16rpx;
}
.zw-time {
  font-size: 26rpx;
  color: #888;
  margin-top: 10rpx;
}
.zw-time text {
  margin-right: 10rpx;
}

/* Tags */
.zw-tags {
  background: #fff;
  padding: 16rpx 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}
.zw-tag {
  background: #f0f4ff;
  color: #5b7fc7;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 6rpx;
  margin-right: 14rpx;
  margin-bottom: 10rpx;
}

/* Price Row */
.zw-price-row {
  background: #fff;
  padding: 24rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.zw-price-num {
  font-size: 44rpx;
  font-weight: bold;
  color: #fe552e;
}
.zw-price-unit {
  font-size: 24rpx;
  color: #fe552e;
  margin-left: 6rpx;
}
.zw-headcount {
  font-size: 26rpx;
  color: #888;
}

/* Benefits */
.zw-benefits {
  background: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}
.zw-benefit-tag {
  background: #e4f3fc;
  color: #5c82c0;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 6rpx;
  margin-right: 14rpx;
  margin-bottom: 10rpx;
}
.zw-benefit-tag.highlight {
  background: #fff3e8;
  color: #fe552e;
}

/* Job fields */
.zw-job-fields {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.zw-job-field {
  width: 50%;
  font-size: 28rpx;
  color: #666;
  line-height: 2;
  box-sizing: border-box;
}
.zw-field-label {
  color: #999;
}

/* Section */
.zw-section {
  background: #fff;
  padding: 24rpx 30rpx;
  margin-bottom: 16rpx;
}
.zw-section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 16rpx;
}
.zw-address {
  font-size: 28rpx;
  color: #3366cc;
  margin-bottom: 16rpx;
}
.zw-map {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  overflow: hidden;
}
.zw-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}
.zw-tips-text {
  color: #999;
  font-size: 26rpx;
}

/* Publisher */
.zw-publisher {
  background: #fff;
  padding: 24rpx 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 16rpx;
}
.zw-publisher-avatar image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.zw-avatar-placeholder {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999;
}
.zw-publisher-detail {
  margin-left: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.zw-publisher-row1 {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.zw-publisher-name {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}
.zw-verified {
  font-size: 22rpx;
  color: #fff;
  background: #07b56d;
  padding: 4rpx 14rpx;
  border-radius: 4rpx;
  margin-left: 14rpx;
}
.zw-publisher-row2 {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* Safety */
.zw-safety {
  background: #fffbe6;
  padding: 20rpx 30rpx;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

/* Bottom Bar */
.zw-bottom-space {
  height: calc(120rpx + env(safe-area-inset-bottom));
}
.zw-bottom-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 16rpx 0;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  z-index: 999;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  box-sizing: border-box;
}
.zw-bottom-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
}
.zw-btn-share {
  width: 120rpx;
  flex-shrink: 0;
}
.zw-share-btn {
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
  font-size: 24rpx;
  color: #666;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.zw-share-btn .fa {
  font-size: 36rpx;
}
.zw-share-btn::after {
  border: none;
}
.zw-btn-save {
  width: 120rpx;
  flex-shrink: 0;
}
.zw-btn-save .fa {
  font-size: 36rpx;
}
.zw-saved {
  color: #fe552e;
}
.zw-btn-label {
  font-size: 20rpx;
  margin-top: 6rpx;
}
.zw-btn-apply {
  flex: 1;
  margin: 0 24rpx 0 0;
  height: 80rpx;
  background: #fe552e;
  color: #fff;
  border-radius: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
}
.zw-apply-count {
  font-size: 24rpx;
  font-weight: normal;
  margin-left: 6rpx;
}
