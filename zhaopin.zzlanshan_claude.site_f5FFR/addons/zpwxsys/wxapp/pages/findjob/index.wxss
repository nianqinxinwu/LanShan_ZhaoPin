page {
    background: #f5f5f5;
}

.container_2 {
    background-color: #f5f5f5;
    min-height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 140rpx;
}

/* ========== 搜索栏 ========== */

.search-bar {
    width: 710rpx;
    height: 80rpx;
    background: #fff;
    border-radius: 40rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 20rpx;
    margin-left: 20rpx;
    padding: 0 20rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
    position: relative;
    z-index: 10;
}

.search-city {
    font-size: 28rpx;
    color: #333;
    font-weight: 600;
    white-space: nowrap;
    padding-right: 20rpx;
    border-right: 2rpx solid #eee;
}

.search-city .fa-angle-down {
    margin-left: 6rpx;
    font-size: 24rpx;
    color: #999;
}

.search-input {
    flex: 1;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left: 20rpx;
}

.search-input icon {
    margin-right: 10rpx;
}

.search-input text {
    color: #bbb;
    font-size: 26rpx;
}

.search-input input {
    flex: 1;
    color: #333;
    font-size: 26rpx;
}

/* ========== 筛选栏 ========== */

.filter-bar {
    width: 750rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    background: #fff;
    padding: 20rpx 10rpx;
    margin-top: 20rpx;
    position: sticky;
    top: 0;
    z-index: 200;
}

.filter-item {
    flex: 1;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    color: #333;
    height: 56rpx;
}

.filter-item-active {
    color: #ff5a2d;
}

.filter-item-active .filter-arrow {
    color: #ff5a2d;
}

.filter-arrow {
    margin-left: 6rpx;
    font-size: 20rpx;
    color: #999;
}

/* ========== 下拉面板 ========== */

.filter-dropdown {
    position: fixed;
    top: 0;
    left: 0;
    width: 750rpx;
    max-height: 60vh;
    overflow-y: auto;
    background: #fff;
    z-index: 300;
    padding: 20rpx 30rpx;
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.filter-dropdown-item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 88rpx;
    border-bottom: 1rpx solid #f0f0f0;
    font-size: 28rpx;
    color: #333;
}

.filter-dropdown-item-active {
    color: #ff5a2d;
}

.filter-dropdown-item .fa-check {
    color: #ff5a2d;
    font-size: 28rpx;
}

/* 网格下拉 */

.filter-dropdown-grid {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding: 20rpx 20rpx;
}

.filter-grid-item {
    width: 200rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    background: #f3f4f6;
    border-radius: 36rpx;
    margin: 10rpx 16rpx;
    font-size: 24rpx;
    color: #666;
}

.filter-grid-item-active {
    background: #fff0eb;
    color: #ff5a2d;
    border: 1rpx solid #ff5a2d;
}

/* ========== 遮罩层 ========== */

.filter-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 199;
    background-color: rgba(0, 0, 0, 0.5);
}

/* ========== 岗位卡片 ========== */

.job-list {
    width: 750rpx;
    padding-bottom: 20rpx;
}

.job-card {
    width: 670rpx;
    background: #fff;
    border-radius: 16rpx;
    margin: 0 auto 20rpx auto;
    padding: 28rpx 30rpx;
    box-shadow: 0 2rpx 16rpx rgba(59, 83, 115, 0.08);
}

.job-card:first-child {
    margin-top: 20rpx;
}

.job-card-row1 {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 14rpx;
}

.job-card-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #222;
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.job-card-top {
    font-size: 20rpx;
    color: #fff;
    background: #880015;
    padding: 4rpx 16rpx;
    border-radius: 6rpx;
    margin-left: 16rpx;
    white-space: nowrap;
}

.job-card-row2 {
    font-size: 24rpx;
    color: #888;
    margin-bottom: 14rpx;
}

.job-card-row2 .fa {
    margin-right: 8rpx;
    color: #bbb;
}

.job-card-row3 {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-bottom: 16rpx;
}

.job-tag {
    font-size: 22rpx;
    color: #666;
    background: #f3f4f6;
    padding: 6rpx 16rpx;
    border-radius: 6rpx;
    margin-right: 12rpx;
    margin-bottom: 8rpx;
}

.job-card-row4 {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 16rpx;
}

.job-card-price {
    font-size: 36rpx;
    font-weight: bold;
    color: #ff5a2d;
}

.job-card-num {
    font-size: 24rpx;
    color: #999;
}

.job-card-row5 {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding-top: 16rpx;
    border-top: 1rpx solid #f0f0f0;
}

.job-card-addr {
    font-size: 24rpx;
    color: #FF830D;
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.job-card-addr .fa {
    color: #FF830D;
    margin-right: 6rpx;
}

.job-card-apply {
    font-size: 26rpx;
    color: #fff;
    background: #182078;
    padding: 12rpx 40rpx;
    border-radius: 30rpx;
    margin-left: 20rpx;
    white-space: nowrap;
}

/* ========== 加载更多 ========== */

.loadmore {
    text-align: center;
    font-size: 24rpx;
    color: #999;
    padding: 20rpx 0;
}

/* ========== 底部导航按钮样式 ========== */

button::after {
    border: 0;
}
