.container { padding: 20rpx; }
.section { background: #fff; border-radius: 16rpx; padding: 24rpx; margin-bottom: 24rpx; }
.section-title { font-size: 30rpx; font-weight: bold; color: #333; margin-bottom: 20rpx; }
.notice-input { width: 100%; height: 160rpx; background: #f5f5f5; border-radius: 12rpx; padding: 16rpx; font-size: 28rpx; box-sizing: border-box; }
.save-btn { margin-top: 16rpx; background: #1989fa; color: #fff; font-size: 28rpx; border-radius: 8rpx; }
.member-item { display: flex; align-items: center; padding: 16rpx 0; border-bottom: 1rpx solid #f0f0f0; }
.member-item:last-child { border-bottom: none; }
.member-avatar { width: 80rpx; height: 80rpx; border-radius: 50%; margin-right: 16rpx; flex-shrink: 0; }
.member-info { flex: 1; }
.member-name { font-size: 28rpx; color: #333; display: flex; align-items: center; }
.member-time { font-size: 22rpx; color: #999; margin-top: 4rpx; }
.role-tag { font-size: 20rpx; padding: 2rpx 10rpx; border-radius: 4rpx; margin-left: 8rpx; }
.role-tag.owner { background: #ff9800; color: #fff; }
.role-tag.admin { background: #1989fa; color: #fff; }
.role-tag.muted { background: #e64340; color: #fff; }
.member-actions { display: flex; gap: 12rpx; }
.action-btn { font-size: 24rpx; padding: 8rpx 20rpx; border-radius: 6rpx; }
.action-btn.mute { background: #ff9800; color: #fff; }
.action-btn.unmute { background: #4caf50; color: #fff; }
.action-btn.kick { background: #e64340; color: #fff; }
