.container { padding: 20rpx; }
.group-card { display: flex; flex-direction: column; background: #fff; border-radius: 16rpx; padding: 24rpx; margin-bottom: 20rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06); }
.group-card-main { display: flex; flex-direction: row; align-items: center; }
.group-left { margin-right: 20rpx; }
.group-logo { width: 100rpx; height: 100rpx; border-radius: 16rpx; }
.group-info { flex: 1; }
.group-name { font-size: 30rpx; font-weight: bold; color: #333; margin-bottom: 8rpx; }
.group-meta { font-size: 24rpx; color: #666; margin-bottom: 4rpx; }
.group-meta .sep { margin: 0 8rpx; }
.group-time { font-size: 22rpx; color: #999; }
.group-arrow { font-size: 28rpx; color: #ccc; }
.nodata { text-align: center; padding-top: 200rpx; }
.nodata image { width: 200rpx; height: 200rpx; }
.nodata view { font-size: 26rpx; color: #999; margin-top: 16rpx; }
.screen-btn { margin-top: 16rpx; text-align: center; font-size: 26rpx; color: #fff; background: linear-gradient(135deg, #ff6b35, #ff8c42); border-radius: 32rpx; padding: 12rpx 0; }
