.filter-tabs {
  width: 750rpx;
  display: flex;
  flex-direction: row;
  background: #FFF;
  border-bottom: 1rpx solid #efefef;
}

.filter-tabs .tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 14px;
  color: #666;
  position: relative;
}

.filter-tabs .tab.active {
  color: #2577f5;
  font-weight: bold;
}

.filter-tabs .tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #2577f5;
  border-radius: 2rpx;
}

