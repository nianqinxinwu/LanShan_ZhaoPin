/* ====== Job Card Styles ====== */
.job-card {
  background: #FFF;
  margin: 16rpx 20rpx;
  border-radius: 16rpx;
  padding: 28rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.card-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-right: 16rpx;
}

.card-top-btns {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-shrink: 0;
}

.card-status {
  font-size: 22rpx;
  padding: 4rpx 14rpx;
  border-radius: 6rpx;
  margin-right: 12rpx;
}

.status-online {
  background: #e8f5e9;
  color: #43a047;
}

.status-offline {
  background: #f5f5f5;
  color: #999;
}

.status-checking {
  background: #fff3e0;
  color: #ef6c00;
}

.btn-top-small {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  background: #ff9800;
  color: #FFF;
  border-radius: 6rpx;
  margin-right: 10rpx;
}

.btn-spread-small {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  background: #e64340;
  color: #FFF;
  border-radius: 6rpx;
}

.card-time {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.card-tags {
  font-size: 26rpx;
  color: #888;
  margin-bottom: 12rpx;
}

.card-tags .tag-dot {
  color: #ccc;
}

.card-salary-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.card-salary {
  font-size: 28rpx;
  color: #e64340;
  font-weight: 600;
}

.card-applicants {
  font-size: 24rpx;
  color: #999;
}

.card-location {
  font-size: 26rpx;
  color: #888;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.card-location .location-icon {
  margin-right: 6rpx;
  font-size: 26rpx;
}

.card-bottom-btns {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.card-bottom-btns .bottom-btn {
  flex: 1;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  font-size: 26rpx;
  border-radius: 8rpx;
  margin: 0 10rpx;
}

.card-bottom-btns .btn-primary {
  background: #2577f5;
  color: #FFF;
}

.card-bottom-btns .btn-outline {
  border: 1rpx solid #2577f5;
  color: #2577f5;
  background: #FFF;
}

