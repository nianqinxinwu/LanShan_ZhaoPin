<form bindsubmit="savepubinfo" report-submit>

<view class="container">

    <view class="main">
        <view class="title">基本信息</view>
        <view class="list">

            <view class="item">
                <view class="name">岗位名称<text>*</text></view>
                <view class="selectitem"><input value="" type="text" name="jobtitle" placeholder="请输入岗位名称" /></view>
            </view>

            <view class="item">
                <view class="name">开始日期</view>
                <view class="selectitem">
                    <picker mode="date" bindchange="bindStartDateChange" value="{{work_start_date}}">
                        <view class="picker">
                            {{work_start_date ? work_start_date : '请选择开始日期'}}
                        </view>
                    </picker>
                </view>
            </view>

            <view class="item">
                <view class="name">结束日期</view>
                <view class="selectitem">
                    <picker mode="date" bindchange="bindEndDateChange" value="{{work_end_date}}">
                        <view class="picker">
                            {{work_end_date ? work_end_date : '请选择结束日期'}}
                        </view>
                    </picker>
                </view>
            </view>

            <view class="item">
                <view class="name">开始时间</view>
                <view class="selectitem">
                    <picker mode="time" bindchange="bindStartTimeChange" value="{{work_start_time}}">
                        <view class="picker">
                            {{work_start_time ? work_start_time : '请选择每日开始时间'}}
                        </view>
                    </picker>
                </view>
            </view>

            <view class="item">
                <view class="name">结束时间</view>
                <view class="selectitem">
                    <picker mode="time" bindchange="bindEndTimeChange" value="{{work_end_time}}">
                        <view class="picker">
                            {{work_end_time ? work_end_time : '请选择每日结束时间'}}
                        </view>
                    </picker>
                </view>
            </view>

            <view class="item">
                <view class="name">工作性质<text>*</text></view>
                <view class="selectitem">
                    <picker value="{{Index}}" range="{{worktypelist}}" range-key="name" bindchange="bindWorktypeChange">
                        <view class="picker">
                            {{worktypelist[worktypeindexid].name ? worktypelist[worktypeindexid].name : '请选择工作性质'}}
                        </view>
                    </picker>
                </view>
            </view>

            <view class="item">
                <view class="name">工作类型<text>*</text></view>
                <view class="selectitem">
                    <picker value="{{Index}}" range="{{jobcatelist}}" range-key="name" bindchange="bindJobcateChange">
                        <view class="picker">
                            {{jobcatelist[jobcateindexid].name ? jobcatelist[jobcateindexid].name : '请选择工作类型'}}
                        </view>
                    </picker>
                </view>
            </view>

            <view class="item">
                <view class="name">结算方式</view>
                <view class="selectitem">
                    <picker value="{{settleTypeIndex}}" range="{{settleTypeList}}" bindchange="bindSettleTypeChange">
                        <view class="picker">
                            {{settleTypeList[settleTypeIndex]}}
                        </view>
                    </picker>
                </view>
            </view>

            <view class="item">
                <view class="name">性别要求</view>
                <view class="selectitem">
                    <radio-group class="radio-group" bindchange="radioChange">
                        <label class="radio"><radio value="0" checked=""/>不限</label>
                        <label class="radio"><radio value="1"/>男</label>
                        <label class="radio"><radio value="2"/>女</label>
                    </radio-group>
                </view>
            </view>

        </view>
    </view>

    <view class="main">
        <view class="title">福利与薪资</view>
        <view class="list">

            <view class="item">
                <view class="name">福利标签1</view>
                <view class="selectitem"><input value="" type="text" name="benefit_tag1" placeholder="例：包食宿" /></view>
            </view>

            <view class="item">
                <view class="name">福利标签2</view>
                <view class="selectitem"><input value="" type="text" name="benefit_tag2" placeholder="例：交通补贴" /></view>
            </view>

            <view class="item">
                <view class="name">薪资待遇（元/天）</view>
                <view class="selectitem"><input value="" type="digit" name="money" placeholder="请输入薪资" /></view>
            </view>

            <view class="item">
                <view class="name">招聘人数<text>*</text></view>
                <view class="selectitem"><input value="" type="number" name="num" placeholder="请输入招聘人数" /></view>
            </view>

        </view>
    </view>

    <view class="main">
        <view class="title">工作地址</view>
        <view class="list">
            <view class="item" bindtap="chooseLocation">
                <view class="name">点击选择地址</view>
                <view class="selectitem">
                    <text wx:if="{{job_address}}">{{job_address}}</text>
                    <text wx:else style="color:#ccc;">点击选择工作地址</text>
                </view>
            </view>
        </view>
        <view class="zw-map-preview" wx:if="{{hasMap}}">
            <map id="map" longitude="{{job_lng}}" latitude="{{job_lat}}" scale="14" markers="{{markers}}" style="width:100%;height:300rpx;"></map>
        </view>
    </view>

    <view class="main">
        <view class="title">工作详情</view>
        <view class="list">

            <view class="item">
                <view class="name">工作内容<text>*</text></view>
                <view class="selectitem zw-textarea-wrap">
                    <textarea name="content" placeholder="请输入工作内容" maxlength="2000" auto-height></textarea>
                </view>
            </view>

            <view class="item">
                <view class="name">工作要求</view>
                <view class="selectitem zw-textarea-wrap">
                    <textarea name="requirements" placeholder="请输入工作要求" maxlength="2000" auto-height></textarea>
                </view>
            </view>

            <view class="item">
                <view class="name">温馨提示</view>
                <view class="selectitem zw-textarea-wrap">
                    <textarea name="tips" placeholder="请输入温馨提示" maxlength="500" auto-height></textarea>
                </view>
            </view>

        </view>
    </view>

</view>

<view class="weixinmao-float">
    <view class="weixinmao-foot">
        <button class="footer" formType="submit">发布岗位</button>
    </view>
</view>

</form>
