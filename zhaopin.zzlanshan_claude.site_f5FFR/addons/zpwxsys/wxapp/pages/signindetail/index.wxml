<view class="container">

  <view class="signin-header">
    <view class="signin-title">{{jobinfo.jobtitle}} 签到表</view>
    <view class="signin-date">{{todayStr}}</view>
  </view>

  <view class="action-bar">
    <view class="action-btn" bindtap="doConfirmWork">发起工作确认</view>
    <view class="action-btn" bindtap="doBatchSignIn">发起签到</view>
    <view class="action-btn" bindtap="doBatchSignOut">发起签退</view>
  </view>

  <view class="table-header">
    <view class="th td-seq">序号</view>
    <view class="th td-name">人员</view>
    <view class="th td-status">工作确认</view>
    <view class="th td-status">签到</view>
    <view class="th td-status">签退</view>
    <view class="th td-eval">评价</view>
  </view>

  <view class="table-body">
    <view class="table-row" wx:for="{{recordList}}" wx:key="index">
      <view class="td td-seq">{{index + 1}}</view>
      <view class="td td-name">{{item.nickname || '求职者'}}</view>
      <view class="td td-status">
        <view wx:if="{{item.status >= 4}}" class="checkbox checked"></view>
        <view wx:else class="checkbox"></view>
      </view>
      <view class="td td-status">
        <view wx:if="{{item.signed_in == 1}}" class="checkbox checked"></view>
        <view wx:else class="checkbox"></view>
      </view>
      <view class="td td-status">
        <view wx:if="{{item.status == 5}}" class="checkbox checked"></view>
        <view wx:else class="checkbox"></view>
      </view>
      <view class="td td-eval">
        <text wx:if="{{item.eval_str == '好'}}" class="eval-good">好</text>
        <text wx:elif="{{item.eval_str == '差'}}" class="eval-bad">差</text>
        <text wx:else class="eval-none">-</text>
      </view>
    </view>
  </view>

  <view class="nodata" wx:if="{{recordList.length == 0}}">
    <image src="../../imgs/icon/nodata.png"></image>
  </view>

</view>
