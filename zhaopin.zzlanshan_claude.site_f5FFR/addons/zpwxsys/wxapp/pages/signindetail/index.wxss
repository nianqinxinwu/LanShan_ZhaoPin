page {
  background: #f5f5f5;
}

.container {
  min-height: 100vh;
}

.signin-header {
  background: #2577f5;
  padding: 30rpx;
}

.signin-title {
  color: #fff;
  font-size: 1.1rem;
  font-weight: bold;
}

.signin-date {
  color: rgba(255, 255, 255, 0.75);
  font-size: 0.75rem;
  margin-top: 8rpx;
}

.action-bar {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: #fff;
  padding: 20rpx 16rpx;
  gap: 20rpx;
}

.action-btn {
  font-size: 0.75rem;
  color: #2577f5;
  border: 1rpx solid #2577f5;
  border-radius: 30rpx;
  padding: 12rpx 28rpx;
  text-align: center;
}

.action-btn:active {
  background: #e8f0fe;
}

.table-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #f0f0f0;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.table-header .th {
  text-align: center;
  font-size: 0.7rem;
  color: #888;
  font-weight: bold;
}

.table-body .table-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.table-row .td {
  text-align: center;
  font-size: 0.78rem;
  color: #333;
}

.td-seq {
  width: 70rpx;
  flex-shrink: 0;
}

.td-name {
  flex: 1;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 4rpx;
}

.td-status {
  width: 110rpx;
  flex-shrink: 0;
}

.td-eval {
  width: 80rpx;
  flex-shrink: 0;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 3rpx solid #ccc;
  border-radius: 6rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin: 0 auto;
}

.checkbox.checked {
  background: #4caf50;
  border-color: #4caf50;
}

.checkbox.checked::after {
  content: '';
  width: 14rpx;
  height: 22rpx;
  border: 3rpx solid #fff;
  border-top: none;
  border-left: none;
  transform: rotate(45deg);
  position: absolute;
  top: 3rpx;
  left: 9rpx;
}

.eval-good {
  color: #f5a623;
}

.eval-bad {
  color: #f5a623;
}

.eval-none {
  color: #ccc;
}

.nodata {
  width: 750rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 300rpx;
}

.nodata image {
  width: 150rpx;
  height: 150rpx;
}
