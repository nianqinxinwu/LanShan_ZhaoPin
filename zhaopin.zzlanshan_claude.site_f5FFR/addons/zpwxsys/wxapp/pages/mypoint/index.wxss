/* pages/mypoint/index.wxss */
page {
  background: #f5f5f5;
}

.container {
  background-color: #f5f5f5;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.point-balance-card {
  width: 700rpx;
  background: linear-gradient(135deg, #ff8300, #ffaa00);
  margin: 20rpx 25rpx;
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  color: #fff;
  text-align: center;
  box-sizing: border-box;
}

.balance-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.balance-value {
  font-size: 60rpx;
  font-weight: bold;
  margin: 16rpx 0;
}

.balance-desc {
  font-size: 24rpx;
  opacity: 0.7;
}

.point-section {
  width: 700rpx;
  background: #fff;
  margin: 20rpx 25rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-sizing: border-box;
}

.point-section .section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.earn-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.earn-item {
  width: 30%;
  border: 2rpx solid #ff8300;
  background: #fff8f0;
  border-radius: 12rpx;
  padding: 20rpx 0;
  text-align: center;
  margin-bottom: 16rpx;
}

.earn-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff8300;
}

.earn-value {
  font-size: 24rpx;
  color: #ff8300;
  font-weight: bold;
  margin-top: 8rpx;
}

.exchange-info {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

.btn-exchange {
  background: #ff8300 !important;
  color: #fff !important;
  border-radius: 50rpx !important;
  margin-top: 20rpx;
  font-size: 30rpx !important;
}

.btn-exchange[disabled] {
  background: #ccc !important;
  color: #999 !important;
}

.point-menu {
  width: 700rpx;
  background: #fff;
  margin: 20rpx 25rpx;
  border-radius: 16rpx;
  box-sizing: border-box;
}

.point-menu .menu-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx;
  font-size: 28rpx;
  color: #333;
}

.point-menu .menu-item image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 16rpx;
}
