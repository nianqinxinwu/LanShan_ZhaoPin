<!--pages/mypoint/index.wxml-->
<view class="container">

  <!-- 积分余额卡片 -->
  <view class="point-balance-card">
    <view class="balance-label">我的积分</view>
    <view class="balance-value">{{pointBalance}}</view>
    <view class="balance-desc">签到和推荐可获得积分</view>
  </view>

  <!-- 获取积分 -->
  <view class="point-section">
    <view class="section-title">获取积分</view>
    <view class="earn-grid">
      <view class="earn-item">
        <view class="earn-name">每日签到</view>
        <view class="earn-value">+1 积分</view>
      </view>
      <view class="earn-item">
        <view class="earn-name">推荐好友</view>
        <view class="earn-value">+2 积分</view>
      </view>
      <view class="earn-item">
        <view class="earn-name">完成任务</view>
        <view class="earn-value">+5 积分</view>
      </view>
    </view>
  </view>

  <!-- 积分兑换 -->
  <view class="point-section">
    <view class="section-title">积分兑换</view>
    <view class="exchange-info">
      <view>兑换规则：10积分 = 1章鱼币</view>
      <view>当前可兑换：{{exchangePoints}}积分 → {{exchangeCoins}}章鱼币</view>
    </view>
    <button class="btn-exchange" bindtap="doExchange" disabled="{{pointBalance < 10}}">
      {{pointBalance >= 10 ? '立即兑换' : '积分不足（最少10积分）'}}
    </button>
  </view>

  <!-- 积分明细入口 -->
  <view class="point-menu">
    <view class="menu-item" bindtap="toPointRecords">
      <image src="../../imgs/icon/05.png"></image>
      <view>积分明细</view>
    </view>
  </view>

</view>
