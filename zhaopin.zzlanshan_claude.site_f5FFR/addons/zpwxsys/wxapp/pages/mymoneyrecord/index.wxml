<!-- 旧系统佣金明细 -->
<view wx:if="{{!recordType}}">
  <view class="scorelist">
    <view class="title">
      <view>ID</view>
      <view>推荐</view>
      <view>佣金</view>
      <view>类型</view>
      <view>状态</view>
      <view>时间</view>
    </view>
    <view class="list" wx:for="{{moneylist}}">
      <view>{{item.id}}</view>
      <view>{{item.content}}</view>
      <view>￥{{item.money}}</view>
      <view>{{item.type == 0 ? '任务佣金' : '提现'}}</view>
      <view>{{item.status == 0 ? '未确认' :'已确认' }}</view>
      <view>{{item.createtime}}</view>
    </view>
  </view>
</view>

<!-- 章鱼币/积分明细 -->
<view wx:if="{{recordType}}">
  <view class="coin-balance-bar">
    <text>当前{{recordType == 'coin' ? '章鱼币' : '积分'}}余额：</text>
    <text class="balance-num">{{balance}}</text>
  </view>

  <view class="coin-record-list">
    <view class="record-item" wx:for="{{recordlist}}" wx:key="id">
      <view class="record-left">
        <view class="record-action">{{item.action_text}}</view>
        <view class="record-remark">{{item.remark}}</view>
        <view class="record-time">{{item.createtime}}</view>
      </view>
      <view class="record-right">
        <view class="record-amount {{item.amount > 0 ? 'income' : 'expense'}}">
          {{item.amount > 0 ? '+' : ''}}{{item.amount}}
        </view>
        <view class="record-balance">余额 {{item.balance}}</view>
      </view>
    </view>

    <view class="empty-tip" wx:if="{{recordlist.length == 0}}">
      <text>暂无记录</text>
    </view>
  </view>
</view>
