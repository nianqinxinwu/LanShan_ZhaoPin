/* 章鱼币/积分明细样式 */
.coin-balance-bar {
  background: #fff;
  padding: 24rpx 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1rpx solid #eee;
}
.balance-num {
  font-size: 36rpx;
  font-weight: bold;
  color: #2577f5;
  margin-left: 8rpx;
}

.coin-record-list {
  padding: 0 20rpx;
}
.record-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #fff;
  padding: 24rpx 20rpx;
  margin-top: 12rpx;
  border-radius: 12rpx;
}
.record-left {
  flex: 1;
}
.record-action {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
}
.record-remark {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}
.record-time {
  font-size: 22rpx;
  color: #ccc;
}
.record-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
}
.record-amount {
  font-size: 32rpx;
  font-weight: bold;
}
.record-amount.income {
  color: #ff8300;
}
.record-amount.expense {
  color: #333;
}
.record-balance {
  font-size: 22rpx;
  color: #ccc;
  margin-top: 4rpx;
}

.empty-tip {
  text-align: center;
  padding: 80rpx 0;
  color: #ccc;
  font-size: 28rpx;
}