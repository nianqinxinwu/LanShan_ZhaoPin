  <block wx:if="{{data.videourl }}">

  <view class="jobdetail">
      <view class="jobtitle">视频介绍</view>
  </view>
  <view class="jobcontent">
      <view class="detail2"> 
      
       <video autoplay="true" src='{{data.videourl}}' style='width:700rpx;'></video>
       </view>
  </view>

</block>



     <view class="jobdetail">
      <view class="jobtitle">职位说明</view>
  </view>
  <view class="jobcontent">

      <view class="jobfiled">
      
      <view>招聘: {{data.num}}人  </view>
      <view>年龄: {{data.age}} </view>
      <view>性别: <block wx:if="{{data.sex==1}}"> 男</block><block wx:elif="{{data.sex==2}}">女</block><block wx:else>男女不限</block> </view>
      <view>学历: {{data.education}}</view>
      
      </view>

      <view class="jobfiled2">
      
     职责范围: 

    </view>

      <view class="detail">
      
        <rich-text nodes="{{data.content}}"></rich-text>
      
      
      </view>
  </view>




  <view class="jobdetail">
      <view class="jobtitle">企业信息</view>
  </view>




          <view class="company">
                  <view class="companyinfo">

                      <view class="companyname">
                          <view  bindtap='toCompanyDetail' data-id="{{data.companyid}}">{{companyinfo.companyname}}</view>
                          <view  bindtap='toCompanyDetail' data-id="{{data.companyid}}">规模: {{companyinfo.companyworker}}   性质: {{companyinfo.companytype}}   行业: {{companyinfo.companycate}} </view>
                          <view bindtap="goMap" style="font-size: 16px;color:#3366CC;font-weight: bold;"><text class="fa fa-map-marker fa-lg" style='color:#3366CC;'></text> {{companyinfo.address}}</view>
                        </view>

                  </view>
                
                  
          </view>

        <view class="map" bindtap="goMap">
          <map id="map" longitude="{{companyinfo.lng}}" latitude="{{companyinfo.lat}}" scale="14" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" bindregionchange="regionchange" show-location style="width:700rpx; height: 400rpx;"></map>

        </view>


  </view>

