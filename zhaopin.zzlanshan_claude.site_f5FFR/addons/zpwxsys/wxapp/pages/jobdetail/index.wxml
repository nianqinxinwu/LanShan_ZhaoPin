
<import src="../index/templates/ejoblist.wxml" />
<view class="container" hidden='{{isshow}}'>
 
  <view class="jobinfo">

      <view class="jobtitle">
          <view>{{data.jobtitle}}</view>
          <view>{{data.money}}<block wx:if="{{data.settle_type > 0}}"> · <block wx:if="{{data.settle_type == 1}}">日结</block><block wx:elif="{{data.settle_type == 2}}">周结</block><block wx:elif="{{data.settle_type == 3}}">月结</block><block wx:elif="{{data.settle_type == 4}}">完工结</block></block></view>
      </view>

     
      
      <view class="joblabel">
         
      
          <view>{{data.education}} | {{data.express}} </view>
    
          
      </view>
 
     





  <view class="jobdetail">
      <view class="jobtitle">福利待遇</view>
  </view>

    <view class="contentlist" style="padding-left:20rpx;">

      <view class="special">
            <view class="item" wx:for="{{data.special}}">{{item}} </view>
  
      </view>

    </view>


   

