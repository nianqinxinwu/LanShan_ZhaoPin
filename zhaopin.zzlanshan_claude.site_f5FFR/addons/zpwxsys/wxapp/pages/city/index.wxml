
<!-- 城市列表 -->
<scroll-view scroll-into-view="toview_{{toView}}" class="city_list" scroll-y="true"   style="height: calc(100vh - 128px);">

	<view class="cities">
		<view class="current">快捷选择</view>
		<view class="city_type">
			<text class="city_tag" data-name="全国" data-id="0" bindtap='selectcity'>全国</text>
		</view>
	</view>

	<view class="cities">
		<view class="current" id="AA">热门城市</view>
		<view class="city_type">
			<text class="city_tag" wx:for="{{hotlist}}" data-name="{{item.name}}" data-id="{{item.id}}" bindtap='selectcity'>{{item.name}}</text>
		
		</view>
	</view>
    
	<view class="cities" wx:for="{{citylist}}" >
		<view class="current"  id="toview_{{item.firstname}}">{{item.firstname}}</view>
		<view class="city_type">
			<text class="city_tag"  wx:for="{{item.firstlist}}" wx:for-item="itemName" data-name="{{itemName.name}}" data-id="{{itemName.id}}" bindtap='selectcity'>{{itemName.name}}</text>

		
		</view>
	</view>
	
</scroll-view>

