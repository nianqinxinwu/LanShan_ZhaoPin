



<view class="levellist">
<view class="levelmain">

 <block wx:for="{{companyrolelist}}">
    <view class="levelitem  {{curNav == item.id ? 'selected' : ''}}" bindtap="selectNav" data-index="{{index}}" data-id="{{item.id}}"    >

        <view>{{item.title}}</view>
        <view>￥{{item.money}}</view>
<view>简历{{item.notenum}}次</view>

