<view class="scorelist">
    <view class="title" >
        <view>编号</view>
        <view>职位/简历</view>
        <view>剩余(职位/简历)</view>
         <view>时间</view>

    </view>
    <view class="list" wx:for="{{companyrecordlist}}"  >
        <view>{{item.id}}</view>
